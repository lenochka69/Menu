<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DinnerFragment"
    android:background="@mipmap/dinner2_foreground">

    <ImageView
        android:id="@+id/dice_image_dinner"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/randomize_button_dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Испытай удачу!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dice_image_dinner" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/beef"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice11_foreground" />

        <Button
            android:id="@+id/pork"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice2_foreground" />

        <Button
            android:id="@+id/chicken_dinner"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice3_foreground" />

        <Button
            android:id="@+id/turkey"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice4_foreground" />

        <Button
            android:id="@+id/seafood"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice5_foreground" />

        <Button
            android:id="@+id/vegetarianism"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice6_foreground" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>