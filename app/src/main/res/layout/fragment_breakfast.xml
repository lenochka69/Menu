<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Breakfast"
    android:background="@color/papaya_whip">

    <ImageView
        android:id="@+id/dice_image_breakfast"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <Button
        android:id="@+id/randomize_button_breakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Испытай удачу!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dice_image_breakfast"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/milk"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice11_foreground" />

        <Button
            android:id="@+id/porridge"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice2_foreground" />

        <Button
            android:id="@+id/pancakes"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice3_foreground" />

        <Button
            android:id="@+id/eggs"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice4_foreground" />

        <Button
            android:id="@+id/cheese"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice5_foreground" />

        <Button
            android:id="@+id/muesli"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice6_foreground" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>