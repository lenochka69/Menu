<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LunchFragment"
    android:background="@drawable/lunch_two">

    <ImageView
        android:id="@+id/dice_image_lunch"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/randomize_button_lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Испытай удачу!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dice_image_lunch"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/borscht"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice11_foreground"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fish_soup"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice2_foreground"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mushroom_soup"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice3_foreground"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/chicken_soup"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice4_foreground"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/kharcho"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice5_foreground"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fast_food"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/dice6_foreground"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>